<!doctype html>
<head>
  <h1>NBA MVP Predictor</h1>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" type="text/css" href="static/style.css" />
  <title>Link CSS to HTML</title>
</head>

<body>
  <form method="POST">
  <label for="dropdown">Choose an NBA season:</label>
  <select id="dropdown", name="season">
    {% for  nba_season in nba_seasons %}
      <option value="{{ nba_season }}">{{ nba_season }}</option>
    {% endfor %}
  </select>
  <button type="submit">Go</button>
  </form>
</body>
